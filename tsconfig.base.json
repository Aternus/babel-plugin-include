{
  "compilerOptions": {
    "rootDir": ".",

    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,

    // @see https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  }
}
